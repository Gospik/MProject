<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MProject"
    Shell.FlyoutBehavior="Disabled"
    Title="MProject">

    <TabBar>
        <Tab  Title="Students" Icon="home_icon.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
        </Tab>
        <Tab  Title="Courses" Icon="course_icon.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:Pages.Courses}" Route="Courses" />
        </Tab>
        <Tab  Title="Enroll" Icon="enroll_icon.jpg">
            <ShellContent ContentTemplate="{DataTemplate local:Pages.Enroll}" Route="Enroll" />
        </Tab>

    </TabBar>
    

</Shell>
